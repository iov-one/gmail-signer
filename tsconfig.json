{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES5",
    "moduleResolution": "node",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "lib",
    "baseUrl": "src",
    "paths": {
      "frames/*": ["./frames/*"],
      "types/*": ["./types/*"],
      "templates/*": ["./templates/*"],
      "utils/*": ["./utils/*"],
      "signer": ["./signer"],
      "window": ["./window"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
